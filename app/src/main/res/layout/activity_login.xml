<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".MainActivity"
    android:background="#CDCACA"
    >
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    >
</LinearLayout>

<ImageView
    android:layout_gravity="center"
    android:id="@+id/ivlogo"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/baseline_sports_motorsports_24"
    />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Text"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:background="@android:color/transparent"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_alignTop="@id/editText"
            android:layout_alignBottom="@id/editText"
            android:layout_alignStart="@id/editText" />

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginBottom="15sp"
        android:layout_marginTop="15dp"
        />
//
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton">
        <EditText
            android:id="@+id/edmklogin"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/roundedbutton"
            android:gravity="center_vertical"
            android:hint="Nhập mật khẩu của bạn"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/ivSHPassLoginMK"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="64dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <Button
        android:background="@drawable/dodangnhap"
        android:id="@+id/btdnlogin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:textColor="@color/white"
        android:text="Đăng nhập"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="20dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa có tài khoản?  "
            android:textAllCaps="false"
            android:backgroundTint="@color/white"
            />
        <TextView
            android:id="@+id/tvdklogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#D83535"
            android:backgroundTint="@color/white"
            />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/loginID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
/>

</LinearLayout>