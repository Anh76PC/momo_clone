<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDCACA"
    android:padding="20dp"
    android:orientation="vertical"
    android:id="@+id/cntREF"
    tools:context=".ui.Register2Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        >
        <ImageButton
            android:id="@+id/imbbackRECon"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:paddingEnd="10dp"
            android:src="@drawable/round_arrow_back_ios_24" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="Đăng ký tài khoản"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginBottom="15sp"
        android:layout_marginTop="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/roundedbutton">
        <EditText
            android:id="@+id/edpassRECon"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/roundedbutton"
            android:gravity="center_vertical"
            android:hint="Nhập mật khẩu của bạn"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/ivSHPassRECon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu xác nhận"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginBottom="15sp"
        android:layout_marginTop="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton">
        <EditText
            android:id="@+id/edpassRExnCon"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/roundedbutton"
            android:gravity="center_vertical"
            android:hint="Nhập lại mật khẩu của bạn"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/ivSHPassXNRECon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <Button
        android:id="@+id/checkPassReCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kiểm tra"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        android:backgroundTint="#0EB81F"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:text="Tạo một mật khẩu thoả mãn:"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/dkpasstrueRECon"
            android:drawablePadding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_close_24"
            android:layout_marginLeft="24dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Khớp với mật khẩu xác nhận"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/dk8kituRECon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_close_24"
            android:layout_marginLeft="24dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Chứa ít nhất 8 kí tự"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dkchuhoavathRECon"
            android:drawablePadding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_close_24"
            android:layout_marginLeft="24dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Chứa cả chữ thường(a-z) và chữ hoa(A-Z)"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dksoRECon"
            android:drawablePadding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_close_24"
            android:layout_marginLeft="24dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Chứa ít nhất một số(0-9)"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold" />
    </LinearLayout>
    <Button
        android:id="@+id/btdkyRECon"
        android:layout_marginTop="10sp"
        android:background="@drawable/dodangnhap"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Đăng ký"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="20dp"
        />
</LinearLayout>