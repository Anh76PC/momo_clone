<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CACDCA"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".ui.RegisterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        >
        <ImageButton
            android:id="@+id/imbbackRE"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:paddingEnd="10dp"
            android:src="@drawable/round_arrow_back_ios_24" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="Đăng ký tài khoản"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />
    </LinearLayout>
    <ImageView
        android:id="@+id/ivlogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/baseline_sports_motorsports_24"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số điện thoại"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginBottom="15sp"
        android:layout_marginTop="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        >

        <TextView
            android:background="@drawable/roundedbutton"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="+84"
            android:textColor="@color/black"

            />
        <EditText
            android:id="@+id/edphone"
            android:background="@drawable/roundedbutton"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập số điện thoại của bạn"
            android:gravity="center"
            android:inputType="phone"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
    </LinearLayout>
<CheckBox
    android:id="@+id/cbcheck"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Bằng cách bảo mật và đăng ký bạn đồng ý với điều khoản và chính sách bảo mật."
    android:textSize="15sp"
    android:padding="10dp"
    android:buttonTint="#D83535"
    />
    <Button
        android:id="@+id/btdkyctn"
        android:layout_marginTop="10sp"
        android:backgroundTint="@color/MomoColor"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Tiếp tục"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="20dp"
        />


</LinearLayout>